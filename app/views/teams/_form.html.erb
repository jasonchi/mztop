<%= form_for @team, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :login, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :login, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :no, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :no, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :join_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :join_time, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :season_grade, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :season_grade, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :total_grade, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :total_grade, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_top, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_top, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                teams_path, :class => 'btn' %>
  </div>
<% end %>
