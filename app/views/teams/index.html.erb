<h1>Listing teams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Login</th>
    <th>No</th>
    <th>Join time</th>
    <th>Season grade</th>
    <th>Total grade</th>
    <th>Is top</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.login %></td>
    <td><%= team.no %></td>
    <td><%= team.join_time %></td>
    <td><%= team.season_grade %></td>
    <td><%= team.total_grade %></td>
    <td><%= team.is_top %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

